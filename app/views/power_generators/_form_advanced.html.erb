<%=  simple_form_for :advanced_search, url: root_path, method: :get do |f| %>
  <%= f.input_field :query, label: "", placeholder: "Qual a sua busca?", input_html: {value: ""} %>
  <%= f.input :guarantee, label: "Com garantia", as: :boolean %>
  <%= f.input :pid_free, label: "PID free", as: :boolean %>
  <%= f.input :structure, label: "tipo de estrutura",
    collection: %i[ceramico fibrocimento laje metalico solo trapezoidal]
  %>
  <%= f.input_field :max_lenght, label: "", placeholder: "Comprimento máximo", input_html: {value: ""} %>
  <%= f.input_field :max_width, label: "", placeholder: "Largura máxima", input_html: {value: ""} %>
  <%= f.input_field :max_height, label: "", placeholder: "Altura máxima", input_html: {value: ""} %>
  <%= f.input_field :max_weight, label: "", placeholder: "Peso máximo", input_html: {value: ""} %>
  <%= f.input_field :min_kwp, label: "", placeholder: "KWP mínimo", input_html: {value: ""} %>
  <%= f.submit "Buscar!", class: "btn btn-primary" %>
<% end %>
